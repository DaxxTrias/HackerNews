<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HackerNews.ViewModels"
             xmlns:views="clr-namespace:HackerNews.Views"
             xmlns:controls="clr-namespace:HackerNews.Controls"
             xmlns:objectModel="clr-namespace:System.Collections.ObjectModel;assembly=System.ObjectModel"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:Class="HackerNews.Views.CommentsView"
             x:CompileBindings="True" x:DataType="vm:CommentsViewModel">

  <Design.DataContext>
    <vm:CommentsViewModel>
      <vm:CommentsViewModel.ItemViewModel>
        <vm:ItemViewModel>
          <vm:ItemViewModel.Kids>
            <objectModel:ObservableCollection x:TypeArguments="vm:ItemViewModel">
              <vm:ItemViewModel>
                <vm:ItemViewModel.Text>Comment 1</vm:ItemViewModel.Text>
              </vm:ItemViewModel>
              <vm:ItemViewModel>
                <vm:ItemViewModel.Text>Comment 2</vm:ItemViewModel.Text>
              </vm:ItemViewModel>
              <vm:ItemViewModel>
                <vm:ItemViewModel.Text>Comment 3</vm:ItemViewModel.Text>
              </vm:ItemViewModel>
            </objectModel:ObservableCollection>
          </vm:ItemViewModel.Kids>
        </vm:ItemViewModel>
      </vm:CommentsViewModel.ItemViewModel>
    </vm:CommentsViewModel>
  </Design.DataContext>

  <Panel Background="{DynamicResource MainBackground}"
         DataContext="{Binding ItemViewModel}">

    <!--<RefreshContainer Name="Refresh"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      PullDirection="TopToBottom"
                      RefreshRequested="Refresh_OnRefreshRequested">-->
      <controls:ItemsListBox Items="{Binding Kids}"
                             HorizontalAlignment="Stretch">

        <controls:ItemsListBox.Styles>
          <Style Selector="ListBoxItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
          </Style>
        </controls:ItemsListBox.Styles>

        <controls:ItemsListBox.ItemTemplate>
          <DataTemplate DataType="vm:ItemViewModel">
            <views:CommentView />
          </DataTemplate>
        </controls:ItemsListBox.ItemTemplate>

      </controls:ItemsListBox>
    <!--</RefreshContainer>-->

  </Panel>

</UserControl>

