<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HackerNews.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="100"
             x:Class="HackerNews.Views.HeaderView"
             x:CompileBindings="True" x:DataType="vm:MainViewViewModel">

  <Design.DataContext>
    <vm:MainViewViewModel />
  </Design.DataContext>

  <DockPanel Background="{DynamicResource HeaderTitleBackground}"
             Height="80">

    <Button Width="80"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Background="Transparent">
      <StackPanel Spacing="4"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  DockPanel.Dock="Left">
        <Rectangle Fill="{DynamicResource HamburgerBackground}"
                   Width="26"
                   Height="2.5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <Rectangle Fill="{DynamicResource HamburgerBackground}"
                   Width="26"
                   Height="2.5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <Rectangle Fill="{DynamicResource HamburgerBackground}"
                   Width="26"
                   Height="2.5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
      </StackPanel>
    </Button>

    <DockPanel>

      <StackPanel Spacing="12">
        <!-- Title -->
        <TextBlock Text="{Binding ItemsView.Title, FallbackValue=Title}"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource HeaderTitleForeground}"
                   FontSize="{DynamicResource HeaderTitleFontSize}"
                   FontWeight="Regular"
                   Margin="12,12,12,0" />
        <!-- Last updated -->
        <TextBlock Text="Last updated 0 min ago"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource HeaderLastUpdatedForeground}"
                   FontSize="{DynamicResource HeaderLastUpdatedFontSize}"
                   FontWeight="Regular"
                   Margin="12,0,12,6" />
      </StackPanel>

      <!-- Settings -->
      <Button Width="40"
              HorizontalAlignment="Right"
              VerticalAlignment="Stretch"
              HorizontalContentAlignment="Stretch"
              VerticalContentAlignment="Stretch"
              Background="Transparent"
              Command="{Binding LoadCommand}"
              DockPanel.Dock="Right">
        <StackPanel Spacing="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left">
          <Ellipse Fill="{DynamicResource HamburgerBackground}"
                     Width="5"
                     Height="5"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center" />
          <Ellipse Fill="{DynamicResource HamburgerBackground}"
                   Width="5"
                   Height="5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
          <Ellipse Fill="{DynamicResource HamburgerBackground}"
                   Width="5"
                   Height="5"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        </StackPanel>
      </Button>

    </DockPanel>

  </DockPanel>

</UserControl>

